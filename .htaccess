<IfModule mod_rewrite.c>
    RewriteEngine On

    # 1. Block access to sensitive files/folders
    RewriteRule ^(\.env|artisan|composer\.json|composer\.lock|package\.json|phpunit\.xml)$ - [F,L]
    RewriteRule ^(app|bootstrap|config|database|resources|routes|tests|vendor) - [F,L]

    # 2. Redirect everything else to the 'public' folder
    RewriteRule ^(.*)$ public/$1 [L]
</IfModule>